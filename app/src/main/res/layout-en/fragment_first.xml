<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006699"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/textview_first"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:background="#993300"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="@string/Fremdwort"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Antwort1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/Antwort1"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_first" />

        <Button
            android:id="@+id/Antwort2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/Antwort2"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Antwort1" />

        <Button
            android:id="@+id/Antwort3"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/Antwort3"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Antwort2" />

        <Button
            android:id="@+id/Antwort4"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/Antwort4"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Antwort3" />

</android.support.constraint.ConstraintLayout>